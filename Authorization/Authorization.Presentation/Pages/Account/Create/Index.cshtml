@page
@model Authorization.Presentation.Pages.Create.Index

<div class="login-page">
    <div class="lead">
        <h1>Create Account</h1>
    </div>

    <partial name="_ValidationSummary" />

    <div class="row">

        <div class="col-sm-6">
            <form asp-page="/Account/Create/Index" enctype="multipart/form-data">
                <input type="hidden" asp-for="Input.ReturnUrl" />
                <div class="form-group">
                    <label asp-for="Input.FirstName"></label>
                    <input class="form-control" placeholder="First Name" asp-for="Input.FirstName" autofocus>
                </div>
                <div class="form-group">
                    <label asp-for="Input.LastName"></label>
                    <input class="form-control" placeholder="Last Name" asp-for="Input.LastName" autofocus>
                </div>
                <div class="form-group">
                    <label asp-for="Input.MiddleName"></label>
                    <input class="form-control" placeholder="Middle Name" asp-for="Input.MiddleName" autofocus>
                </div>

                <div class="form-group">
                    <label asp-for="Input.DateOfBirth"></label>
                    <input type="date" class="form-control" asp-for="Input.DateOfBirth" autofocus>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input class="form-control" placeholder="Email" asp-for="Input.Email" autofocus>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input type="password" class="form-control" placeholder="Password" asp-for="Input.Password" autocomplete="off">
                </div>
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input type="text" class="form-control" placeholder="PhoneNumber" asp-for="Input.PhoneNumber">
                </div>

                <div class="form-group">
                    <label asp-for="Input.ProfilePicture"></label>
                    <input type="file" class="form-control" asp-for="Input.ProfilePicture" autofocus>
                </div>

                <button class="btn btn-primary" name="Input.Button" value="create">Create</button>
                <button class="btn btn-secondary" name="Input.Button" value="cancel">Cancel</button>
            </form>
        </div>
        
    </div>
</div>